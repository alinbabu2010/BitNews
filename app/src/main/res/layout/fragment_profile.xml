<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragments.ProfileFragment"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/cagliostro"
        android:text="@string/profile_text"
        android:textColor="@color/primary_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/username_field"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_margin="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            style="@style/dashboard_text_style"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:labelFor="@id/username_display"
            android:text="@string/username_dashboard" />

        <TextView
            android:id="@+id/username_display"
            style="@style/dashboard_text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:baselineAligned="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_field"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_field">

        <TextView
            style="@style/dashboard_text_style"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:labelFor="@id/name_display"
            android:text="@string/name_dashboard" />

        <TextView
            android:id="@+id/name_display"
            style="@style/dashboard_text_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_field">

        <TextView
            style="@style/dashboard_text_style"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:labelFor="@id/email_display"
            android:text="@string/email_dashboard" />

        <TextView
            android:id="@+id/email_display"
            style="@style/dashboard_text_style" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>